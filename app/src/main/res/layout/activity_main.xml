<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cardstuff.MainActivity"
    android:orientation="vertical"
    >

    <GridLayout
        android:id="@+id/opponentHand"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:layout_marginBottom="50dp"
        >

    </GridLayout>


    <TextView
        android:id="@+id/ePoints"
        android:layout_above="@id/field1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"/>
    <GridLayout
        android:id="@+id/field1"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6">

    </GridLayout>

    <GridLayout
        android:id="@+id/field2"
        android:layout_below="@id/field1"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="6">

    </GridLayout>

    <TextView
        android:id="@+id/pPoints"
        android:layout_below="@id/field2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"/>


    <ImageView
        android:id="@+id/button"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/cardback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="setGameStart"
        />

    <GridLayout
        android:id="@+id/grid"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:layout_marginTop="50dp">

    </GridLayout>

</RelativeLayout>
